// Footer.astro
---

<footer class="bg-gradient-to-r from-yellow-400 via-blue-500 to-red-500 text-white mt-12 relative">
  <div class="container mx-auto px-6 py-10 grid md:grid-cols-2 gap-8 text-center md:text-left">
    
    <!-- Columna 1 -->
    <div>
      <h2 class="text-2xl font-bold">Transporte & Turismo</h2>
      <p class="mt-3 text-sm">
        Conectamos viajeros con experiencias únicas en Colombia.  
        Transporte puerta a puerta con el plus de guías locales.  
      </p>
    </div>

    <!-- Columna 2 -->
    <div>
      <h3 class="text-xl font-semibold">Contáctanos</h3>
      <p class="mt-3">📍 Bogotá, Colombia</p>
      <p>📞 +57 310 545 6521</p>
      <p>✉️ contacto@turismocolombia.com</p>

      <!-- Redes sociales -->
      <div class="flex justify-center md:justify-start space-x-4 mt-4">
        <!-- Instagram -->
        <a href="https://www.instagram.com/colombiantraveldoor/" class="w-10 h-10 flex items-center justify-center rounded-full bg-white text-pink-600 hover:bg-pink-600 hover:text-white transition">
          <i class="fab fa-instagram"></i>
        </a>
        <!-- WhatsApp -->
        <a href="#" class="w-10 h-10 flex items-center justify-center rounded-full bg-white text-green-600 hover:bg-green-600 hover:text-white transition">
          <i class="fab fa-whatsapp"></i>
        </a>
        <!-- Telegram -->
        <a href="#" class="w-10 h-10 flex items-center justify-center rounded-full bg-white text-blue-500 hover:bg-blue-500 hover:text-white transition">
          <i class="fab fa-telegram-plane"></i>
        </a>
        <!-- TikTok -->
        <a href="https://www.tiktok.com/@colombiantraveldoor?lang=es" class="w-10 h-10 flex items-center justify-center rounded-full bg-white text-black hover:bg-black hover:text-white transition">
          <i class="fab fa-tiktok"></i>
        </a>
      </div>
    </div>
  </div>

  <!-- Flecha hacia arriba -->
  <a href="#inicio" class="absolute right-6 bottom-16 w-12 h-12 flex items-center justify-center rounded-full bg-white text-blue-600 shadow-lg hover:bg-blue-600 hover:text-white transition">
    <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" class="w-6 h-6" viewBox="0 0 24 24">
      <path d="M12 4l-8 8h6v8h4v-8h6z"/>
    </svg>
  </a>

  <!-- Parte inferior -->
  <div class="bg-black bg-opacity-30 text-center py-4 text-sm">
    © 2025 Transporte & Turismo Colombia. Todos los derechos reservados.
  </div>
</footer>
